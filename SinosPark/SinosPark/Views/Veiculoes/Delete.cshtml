@model SinosPark.Models.Veiculo

@{
    ViewBag.Title = Resource.Label_Delete;
}

<h2>@Resource.Label_Delete</h2>

<h3>@Resource.Confirm_Delete</h3>
<div>
    <h4>Veículo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Placa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Placa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isBloqueado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isBloqueado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VeiculoModelo.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VeiculoModelo.Descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resource.Label_Delete" class="btn btn-default" /> |
            @Html.ActionLink(@Resource.Label_BackToList, "Index")
        </div>
    }
</div>

@using System.Globalization
@model IEnumerable<SinosPark.Models.Aluno>

@{
    ViewBag.Title = "Alunos";
}

<h2>Lista de Alunos</h2>

<p>
    @Html.ActionLink(@Resource.Label_CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorSaldo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matricula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @if (item.ValorSaldo != null)
            {
                @Html.Label(item.ValorSaldo.Value.ToString("C", CultureInfo.CurrentCulture))
            }
        </td>
        <td>
            @Html.ActionLink(@Resource.Label_Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(@Resource.Label_Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(@Resource.Label_Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

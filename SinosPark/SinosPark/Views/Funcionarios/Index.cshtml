@model IEnumerable<SinosPark.Models.Funcionario>

@{
    ViewBag.Title = "Lista de Funcionários";
}

<h2>Lista de Funcionários</h2>

<p>
    @Html.ActionLink(@Resource.Label_CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isGerente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isGerente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink(@Resource.Label_Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(@Resource.Label_Details, "Details", new { id = item.Id }) |
            @Html.ActionLink(@Resource.Label_Delete, "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

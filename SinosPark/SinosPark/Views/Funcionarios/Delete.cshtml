@model SinosPark.Models.Funcionario

@{
    ViewBag.Title = @Resource.Label_Delete;
}

<h2>@Resource.Label_Delete</h2>

<h3>@Resource.Confirm_Delete</h3>
<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CPF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CPF)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isGerente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isGerente)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resource.Label_Delete" class="btn btn-default" /> |
            @Html.ActionLink(@Resource.Label_BackToList, "Index")
        </div>
    }
</div>

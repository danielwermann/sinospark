@model IEnumerable<SinosPark.Models.Estacionamento>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Estacionamentos</h2>

<p>
    @Html.ActionLink(@Resource.Label_CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAtivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantidadeMaxima)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isAtivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantidadeMaxima)
        </td>
        <td>
            @Html.ActionLink(@Resource.Label_Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(@Resource.Label_Details, "Details", new { id = item.Id }) |
            @Html.ActionLink(@Resource.Label_Delete, "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

@model IEnumerable<SinosPark.Models.Preco>

@{
    ViewBag.Title = "Tabela de Preços";
}

<h2>Tabela de Preços</h2>

<p>
    @Html.ActionLink(@Resource.Label_CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tempo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isMoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAtivo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tempo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isMoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isAtivo)
        </td>
        <td>
            @Html.ActionLink(@Resource.Label_Edit, "Edit", new { id = item.Id }) |
            @Html.ActionLink(@Resource.Label_Details, "Details", new { id = item.Id }) |
            @Html.ActionLink(@Resource.Label_Delete, "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
